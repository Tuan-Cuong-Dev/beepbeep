// tsconfig.json
// Date 27/09
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],   // thêm DOM nếu dùng fetch global
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true           // ⬅ để stack trace đọc được
  },
  "include": ["src"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
}
